{
    "multipart": [
        {   "apply": { "model": "lacroix:pipes/energypipebase" }},
        {   "when": { "north": "true" },
            "apply": { "model": "lacroix:pipes/energypipeconnector", "uvlock": true }
        },
        {   "when": { "east": "true" },
            "apply": { "model": "lacroix:pipes/energypipeconnector", "y": 90, "uvlock": true }
        },
        {   "when": { "south": "true" },
            "apply": { "model": "lacroix:pipes/energypipeconnector", "y": 180, "uvlock": true }
        },
        {   "when": { "west": "true" },
            "apply": { "model": "lacroix:pipes/energypipeconnector", "y": 270, "uvlock": true }
        },
        {   "when": { "up": "true" },
            "apply": { "model": "lacroix:pipes/energypipeconnector", "x": -90, "uvlock": true }
        },
        {   "when": { "down": "true" },
            "apply": { "model": "lacroix:pipes/energypipeconnector", "x": 90, "uvlock": true }
        }
    ]
}